{
  "name": "polaris",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "prestart": "yarn build:tailwind",
    "start": "react-scripts start",
    "prebuild": "yarn build:tailwind",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "build:tailwind": "tailwindcss build src/assets/css/tailwind.css -o src/assets/css/tailwind.out.css"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
